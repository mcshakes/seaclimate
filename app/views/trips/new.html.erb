<div class="new-trip-form">
  <section class="row title">
    <h1 class="centered">Create A New Trip</h1>
  </section>

  <div class="input-form">

    <section class="row">

      <%= form_for @trip do |f|%>

      <div class="row centered">
        <div class="large-4 columns">
          <label>Name
            <!-- <input type="text" placeholder="large-12.columns" /> -->
            <%= f.text_field :name %>
          </label>
        </div>
      </div>

      <div class="row centered">
        <div class="large-4 columns">
          <label>Longitude
            <!-- <input type="text" placeholder="large-12.columns" /> -->
            <%= f.text_field :long%>
          </label>
        </div>
      </div>

      <div class="row centered">
        <div class="large-4 columns">
          <label>Latitude
            <!-- <input type="text" placeholder="large-12.columns" /> -->
            <%= f.text_field :lat%>
          </label>
        </div>
      </div>

        <%= f.submit "Create Trip" %>
      <% end %>
    </section>
  </div>

</div>
